{
  "name": "@lvce-editor/editor-worker",
  "version": "0.0.0-dev",
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/editor-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/editorWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "npx xo .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 27,
        "functions": 30,
        "lines": 50
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@lvce-editor/assert": "^1.5.1",
    "@lvce-editor/constants": "^2.7.0",
    "@lvce-editor/i18n": "^2.1.0",
    "@lvce-editor/rpc": "^5.0.0",
    "@lvce-editor/rpc-registry": "^6.5.0",
    "@lvce-editor/verror": "^1.7.0",
    "@lvce-editor/virtual-dom-worker": "^4.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}
