{
  "name": "@lvce-editor/editor-worker-monorepo",
  "version": "0.0.0-dev",
  "description": "",
  "main": "",
  "type": "module",
  "scripts": {
    "postinstall": "lerna bootstrap --ci",
    "lint": "npx xo .",
    "test": "lerna run test",
    "test:integration": "lerna run test:integration",
    "type-check": "tsc",
    "build:watch": "esbuild --format=esm --bundle --watch packages/editor-worker/src/editorWorkerMain.ts --outfile=dist/dist/editorWorkerMain.js",
    "build": "node scripts/build.js"
  },
  "keywords": [],
  "author": "Lvce Editor",
  "license": "MIT",
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "unicorn/better-regex": "off",
      "unicorn/no-array-push-push": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "ignores": [
      "distmin"
    ]
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 90,
        "lines": 88
      }
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@lvce-editor/assert": "^1.3.0",
    "@lvce-editor/command": "^1.1.0",
    "@lvce-editor/fuzzy-search": "^1.0.0",
    "@lvce-editor/ipc": "^11.0.1",
    "@lvce-editor/json-rpc": "^4.2.0",
    "@lvce-editor/verror": "^1.4.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.5.5",
    "esbuild": "^0.24.0",
    "execa": "^9.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "rollup": "^4.21.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "@lerna/legacy-package-management": "^8.1.8",
    "lerna": "^8.1.8"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js",
    "exec": "node scripts/build.js"
  }
}
